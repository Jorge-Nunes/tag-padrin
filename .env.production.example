# Configurações do Banco de Dados
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=tagpadrin
DB_HOST=postgres
DB_PORT=5432

# Configurações do Backend
NODE_ENV=production
PORT=3000
DATABASE_URL=postgresql://postgres:your_secure_password@postgres:5432/tagpadrin
JWT_SECRET=your_super_secret_jwt_key_please_change_this
API_PREFIX=/api

# Configurações do Frontend (Build Time)
# Em produção com Nginx, o frontend acessa a API através do mesmo domínio (relativo)
# ou através da URL completa do domínio se estiver em subdomínio diferente.
# Se estiver usando o nginx.conf fornecido, use a URL relativa:
VITE_API_URL=/api

# Configurações de Deploy (Docker Compose)
# Porta externa para acessar a aplicação (Nginx)
APP_PORT=80
# Porta externa para acessar o banco de dados (opcional, manter fechado em produção real)
DB_EXTERNAL_PORT=5432
